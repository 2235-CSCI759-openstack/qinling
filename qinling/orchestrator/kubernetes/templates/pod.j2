apiVersion: v1
kind: Pod
metadata:
  name: {{ pod_name }}
  labels:
  {% for key, value in labels.items() %}
    {{ key }}: {{ value }}
  {% endfor %}
spec:
  terminationGracePeriodSeconds: 0
  containers:
    - name: {{ pod_name }}
      image: {{ pod_image }}
      imagePullPolicy: IfNotPresent
      {% if input %}
      args:
      {% for item in input %}
        - {{ item }}
      {% endfor %}
      {% endif %}
  restartPolicy: Never
  resources:
      limits:
        cpu: "0.3"
        memory: 256Mi
      requests:
        cpu: "0.1"
        memory: 64Mi
