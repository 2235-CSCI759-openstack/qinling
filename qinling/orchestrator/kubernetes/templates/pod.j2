apiVersion: v1
kind: Pod
metadata:
  name: {{ pod_name }}
  labels:
  {% for key, value in labels.items() %}
    {{ key }}: {{ value }}
  {% endfor %}
spec:
  containers:
    - name: {{ pod_name }}
      image: {{ pod_image }}
      imagePullPolicy: IfNotPresent
      {% if input %}
      args:
      {% for item in input %}
        - {{ item }}
      {% endfor %}
      {% endif %}
  restartPolicy: Never
  resources:
    limits:
      cpu: "0.5"
      memory: 512Mi
    requests:
      cpu: "0.1"
      memory: 128Mi
